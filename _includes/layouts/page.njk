---
layout: layouts/base.njk
section: page
---

<header class="uui-section_header07">
  <div class="uui-page-padding-3">
    <div class="uui-container-large-3">
      <div class="uui-padding-vertical-xhuge-3">
        <div class="w-layout-grid uui-header07_component">
          <div class="uui-header07_content-left">
            <h1 class="uui-heading-large">{{ title }}</h1>
          </div>
          <div class="uui-header07_content-right">
            {% if description %}
            <div class="uui-text-size-xlarge-2">{{ description }}</div>
            {% else %}
            <div class="uui-text-size-xlarge-2">Learn more about the company and the team behind it.</div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

{% if content %}
<section class="uui-section_content">
  <div class="uui-page-padding-3">
    <div class="uui-container-large-3">
      <div class="uui-padding-vertical-xhuge-3">
        <div class="w-richtext">
          {{ content | safe }}
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

{# Секция отзывов - показывается только если включена в админке #}
{% if showTestimonial %}
{% include "components/testimonial.njk" %}
{% endif %}

{# Секция Features - показывается только если включена в админке #}
{% if showFeatures %}
{% include "components/features.njk" %}
{% endif %}
