<head>
  {# ============================================
     Базовые мета-теги
     ============================================ #}
  <meta charset="utf-8">
  <meta name="generator" content="{{ eleventy.generator }}">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
  <meta name="format-detection" content="telephone=no">
  
  {# ============================================
     Основные SEO мета-теги
     ============================================ #}
  {% set pageTitle = title or metadata.title %}
  {% set pageDescription = metaDescription or eleventyComputed.metaDescription or metadata.description %}
  {% set pageUrl = metadata.url + (page.url or '/') %}
  {% set pageImage = ogImage or image or (metadata.url + '/static/img/cme-logo.svg') %}
  {# Если нужно использовать JPG изображение для OG, создайте файл /static/img/og-image.jpg размером 1200x630px #}
  {% set pageType = ogType or 'website' %}
  {% set pageLocale = locale or 'ru_RU' %}
  {% set pageAuthor = author or metadata.author or 'Connection ME' %}
  {% set pageKeywords = keywords or 'консалтинг, ОАЭ, банковские услуги, юридические услуги, налоговое консультирование, бизнес в ОАЭ' %}
  
  <title>{{ pageTitle }}{% if pageTitle != metadata.title %} | {{ metadata.title }}{% endif %}</title>
  <meta name="description" content="{{ pageDescription }}">
  <meta name="keywords" content="{{ pageKeywords }}">
  <meta name="author" content="{{ pageAuthor }}">
  <meta name="robots" content="{{ robots or 'index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1' }}">
  <meta name="googlebot" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
  <meta name="bingbot" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
  
  {# ============================================
     Canonical URL
     ============================================ #}
  <link rel="canonical" href="{{ pageUrl }}">
  
  {# ============================================
     Open Graph / Facebook
     ============================================ #}
  <meta property="og:type" content="{{ pageType }}">
  <meta property="og:title" content="{{ pageTitle }}{% if pageTitle != metadata.title %} | {{ metadata.title }}{% endif %}">
  <meta property="og:description" content="{{ pageDescription }}">
  <meta property="og:url" content="{{ pageUrl }}">
  <meta property="og:image" content="{{ pageImage }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="{{ pageTitle }}">
  <meta property="og:image:type" content="image/jpeg">
  <meta property="og:site_name" content="{{ metadata.title }}">
  <meta property="og:locale" content="{{ pageLocale }}">
  <meta property="og:locale:alternate" content="en_US">
  
  {# ============================================
     Twitter Card
     ============================================ #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="{{ twitterSite or '@connectionme' }}">
  <meta name="twitter:creator" content="{{ twitterCreator or '@connectionme' }}">
  <meta name="twitter:title" content="{{ pageTitle }}{% if pageTitle != metadata.title %} | {{ metadata.title }}{% endif %}">
  <meta name="twitter:description" content="{{ pageDescription }}">
  <meta name="twitter:image" content="{{ pageImage }}">
  <meta name="twitter:image:alt" content="{{ pageTitle }}">
  
  {# ============================================
     Structured Data (JSON-LD)
     ============================================ #}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "{{ metadata.title }}",
    "url": "{{ metadata.url }}",
    "logo": "{{ metadata.url }}/static/img/cme-logo.svg",
    "description": "{{ metadata.description }}",
    "sameAs": []
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "customer service",
      "availableLanguage": ["Russian", "English"]
    }
  }
  </script>
  
  {% if pageType == 'article' %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": "{{ pageTitle }}",
    "description": "{{ pageDescription }}",
    "image": "{{ pageImage }}",
    "datePublished": "{{ date | date('YYYY-MM-DD') }}",
    "dateModified": "{{ dateModified or date | date('YYYY-MM-DD') }}",
    "author": {
      "@type": "Person",
      "name": "{{ pageAuthor }}"
    },
    "publisher": {
      "@type": "Organization",
      "name": "{{ metadata.title }}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ metadata.url }}/static/img/cme-logo.svg"
      }
    }
  }
  </script>
  {% endif %}
  
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "{{ metadata.title }}",
    "url": "{{ metadata.url }}",
    "description": "{{ metadata.description }}",
    "potentialAction": {
      "@type": "SearchAction",
      "target": {
        "@type": "EntryPoint",
        "urlTemplate": "{{ metadata.url }}/search?q={search_term_string}"
      },
      "query-input": "required name=search_term_string"
    }
  }
  </script>
  
  {# ============================================
     Preconnect для производительности
     ============================================ #}
  <link rel="preconnect" href="https://d3e54v103j8qbb.cloudfront.net" crossorigin>
  <link rel="dns-prefetch" href="https://d3e54v103j8qbb.cloudfront.net">
  
  {# ============================================
     Preload критических ресурсов
     ============================================ #}
  <link rel="preload" href="/static/fonts/InterVariable.ttf" as="font" type="font/ttf" crossorigin="anonymous">
  <link rel="preload" href="/static/fonts/EBGaramond-VariableFont_wght.ttf" as="font" type="font/ttf" crossorigin="anonymous">
  
  {# ============================================
     CSS стили
     ============================================ #}
  <link href="/static/css/normalize.css" rel="stylesheet" type="text/css">
  <link href="/static/css/webflow.css" rel="stylesheet" type="text/css">
  <link href="/static/css/connectionme-ru-en.webflow.css" rel="stylesheet" type="text/css">
  <link href="/static/css/global-styles.css" rel="stylesheet" type="text/css">
  {# Временно закомментирован CSS для вариативных шрифтов #}
  {# <link href="/static/css/variable-fonts.css" rel="stylesheet" type="text/css"> #}
  
  {# ============================================
     Favicon и иконки
     ============================================ #}
  <link rel="icon" type="image/svg+xml" href="/static/img/favicon.svg">
  <link rel="icon" type="image/png" sizes="32x32" href="/static/img/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/static/img/favicon-16x16.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/static/img/apple-touch-icon.png">
  <link rel="apple-touch-icon" sizes="152x152" href="/static/img/webclip.png">
  <link rel="manifest" href="/manifest.json">
  
  {# ============================================
     Theme Color
     ============================================ #}
  <meta name="theme-color" content="{{ themeColor or '#7f56d9' }}">
  <meta name="msapplication-TileColor" content="{{ themeColor or '#7f56d9' }}">
  <meta name="msapplication-config" content="/browserconfig.xml">
  
  {# ============================================
     Language и альтернативные языки
     ============================================ #}
  <meta http-equiv="content-language" content="{{ lang or 'ru' }}">
  <link rel="alternate" hreflang="{{ lang or 'ru' }}" href="{{ pageUrl }}">
  <link rel="alternate" hreflang="x-default" href="{{ pageUrl }}">
  
  {# ============================================
     Verification мета-теги (для Google Search Console и др.)
     ============================================ #}
  {% if googleSiteVerification %}
  <meta name="google-site-verification" content="{{ googleSiteVerification }}">
  {% endif %}
  {% if yandexVerification %}
  <meta name="yandex-verification" content="{{ yandexVerification }}">
  {% endif %}
  {% if bingVerification %}
  <meta name="msvalidate.01" content="{{ bingVerification }}">
  {% endif %}
  
  {# ============================================
     Дополнительные мета-теги
     ============================================ #}
  <meta name="application-name" content="{{ metadata.title }}">
  <meta name="apple-mobile-web-app-title" content="{{ metadata.title }}">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="mobile-web-app-capable" content="yes">
  
  {# ============================================
     Webflow JS initialization
     ============================================ #}
  <script type="text/javascript">!function(o,c){var n=c.documentElement,t=" w-mod-";n.className+=t+"js",("ontouchstart"in o||o.DocumentTouch&&c instanceof DocumentTouch)&&(n.className+=t+"touch")}(window,document);</script>
</head>
